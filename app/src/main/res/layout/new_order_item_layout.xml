<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_order_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp4"
    android:background="@color/White"
    android:orientation="vertical"
    android:padding="@dimen/dp16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8">

        <TextView
            android:id="@+id/new_order_person_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ahmed Ali"
            android:textColor="@color/colorDarkText4"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_order_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="40"
            android:textColor="@color/colorDarkText4"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/new_order_price_tv"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/new_order_payment_method_tv"
                android:text="@string/payment"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/new_order_payment_method_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Credit card"
                android:textColor="@color/colorDarkText4"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp4">

            <TextView
                android:id="@+id/new_order_order_text_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Order #042"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/new_order_dispatch_text_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Ordered on 07:02 pm, 01 Jan, 18"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/new_order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:drawablePadding="@dimen/dp4"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_accent_24dp"
            android:text="@string/view_order"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>